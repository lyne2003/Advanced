@model AdvancedBE.Models.Category

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1 class="text-center">Edit Category</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NameCategory" class="form-label">Category Name</label>
        <input asp-for="NameCategory" class="form-control" />
        <span asp-validation-for="NameCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescCategory" class="form-label">Description</label>
        <textarea asp-for="DescCategory" class="form-control"></textarea>
        <span asp-validation-for="DescCategory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>